<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5FE7FF">
    <ImageView
        android:id="@+id/iv_notification_normal_pre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/play_btn_prev"
        android:layout_alignBottom="@+id/tv_notification_normal_album"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iv_notification_normal_next"
        android:src="@mipmap/play_btn_next"
        android:layout_marginEnd="46dp"
        android:layout_alignTop="@+id/iv_notification_normal_pre"
        android:layout_alignParentEnd="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_notification_normal_name"
        android:text="白狐"

        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="13dp"
        android:layout_marginTop="15dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_notification_normal_album"
        android:text="书生"
        android:textColor="#000000"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/tv_notification_normal_name"
        android:layout_marginBottom="14dp" />

</RelativeLayout>